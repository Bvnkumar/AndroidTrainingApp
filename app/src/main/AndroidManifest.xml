<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bvnkumar.androidtrainingapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".listview"
            android:label="@string/title_activity_listview"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Recycler"
            android:label="@string/title_activity_recycler"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".hello"
            android:label="@string/title_activity_hello"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Recycle"
            android:label="@string/title_activity_recycle"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
